       <g class="foreground">
         <use href="#topbar" width="820" x="60" y="-262" />
         <rect class="reflection" width="875" height="570" x="31" y="2" fill="url(#specular-reflection)" style="mix-blend-mode: overlay; pointer-events:none" rx="23.4" ry="23.4" />
         <use href="#keyboard-base" />
      </g>

  </svg>
      
 
 
