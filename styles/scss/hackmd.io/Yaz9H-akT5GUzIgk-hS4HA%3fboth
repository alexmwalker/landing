  --baselineratio: calc(16/9); /* The &#39;line-height:basefont size&#39; ratio ( i.e 16/9 = 1.777778)*/
  
  --basegrid: 32px; /* phone */ 
  --basegrid-tablet: 28px; 
  --basegrid-laptop: 32px; 
  --basegrid-wide: 36px; 
  
