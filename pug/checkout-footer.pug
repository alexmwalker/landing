script.
  $(document).ready(function(){
    $('.showmobile').click(function(){
      $(this).toggleClass('open');
    });
    $('.logged-out').click(function(){
      $('.login-panel').toggleClass('open');
    });
    $('.account-items').click(function(){
      $('.account-items').toggleClass('open');
    });
    $('button.go').click(function(){
      $('.sitepoint-branding').addClass('member');
    });
    $('.logout').click(function(){
      $('.sitepoint-branding').removeClass('member');
    });
  });
    $(window).resize(function(){ /* close the menu on screen resize */
      $('.showmobile').removeClass('open');
      $('.login-panel').removeClass('open');
      $('ul.account-items').removeClass('open');
    });

  /* paypal / creditcard UI switch */
  $("input#element_4_2").change(function () {
      $("body").addClass("paypal", this.checked);
      $("body").removeClass("creditcard", this.checked);
      });
  $("input#element_4_1").change(function () {
      $("body").removeClass("paypal", this.checked);
      $("body").addClass("creditcard", this.checked);
      });

    /* Monthly / Annual switch*/
  $("input.priceswitch-1").change(function () {
      $(".monthly").removeClass("hideit", this.checked);
      $(".annual").addClass("hideit", this.checked);
      });    
  $("input.priceswitch-2").change(function () {
      $(".monthly").addClass("hideit", this.checked);
      $(".annual").removeClass("hideit", this.checked);
      }); 
