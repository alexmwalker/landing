


nav.search-big
  .container
    form(action="search.html")
      .grid-noGutter-center
        .col-10_md-12_sm-12
          input#Search.form-control(name='Search', type='text', value='{searchterm}' placeholder='Search for...')&attributes(searches)  
          //button#searchSubmit.insetbutton(name='singlebutton') &nbsp;
          input#searchSubmit.insetbutton(name='singlebutton')

          .media-selector
            .search-switch
              input#search-books(type='checkbox' checked='checked' value='books')
              label.search-type(for='search-books') Books
              
            .search-switch
              input#search-course(type='checkbox' checked='checked' value='courses')
              label.search-type(for='search-course') Courses
              
            .search-switch
              input#search-talks(type='checkbox' checked='checked' value='talks')
              label.search-type(for='search-talks') Talks
              
            .search-switch
              input#search-code(type='checkbox' checked='checked' value='code')
              label.search-type(for='search-code') Code
      


              
        

            
