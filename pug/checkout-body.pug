section.checkout
  .container
    .grid-reverse-center
      .col-6_sm-10#form_container
          // shared top
          .grid
            .col-12.form_description
              h2 Unlock the SitePoint Library
              p No commitment. Cancel with one-click.
            .col-4_sm-6
              label.description.hidden(for='element_4') Payment 

              .pretty.p-default.p-round.p-pulse
                input#element_4_1.element.radio(name='payment_type' type='radio' value='1' checked='checked')
                .state.p-success-o
                  label.choice(for='element_4_1') Credit Card

            .col-4_sm-6
              .pretty.p-default.p-round.p-pulse
                input#element_4_2.element.radio(name='payment_type' type='radio' value='2')
                .state.p-success-o
                  label.choice.paypal(for='element_4_2') Paypal
            .col-4_sm-hidden
              | 
              //- kept empty for now

            // begin credit card section
            //form#form_79300.cctransaction(method='post' action='')
          .creditcards
            .grid
              .col-8_sm-11
                label.description.small(for='cardnumber') Card number
                input#element_1.element.text.large(name='cardnumber' pattern='[0-9]*' type='text' maxlength='25' value='' placeholder="xxxx xxx xxx xxx")
              .col-4_sm-12
                .card-images

              .col-2_sm-4
                label.description.small(for='element_5') Month 
                  div
                    select#element_5.element.select.small(name='element_5')
                      option(value='1' selected='selected') 1
                      option(value='2') 2
                      option(value='3') 3
                      option(value='4') 4
                      option(value='5') 5
                      option(value='6') 6
                      option(value='7') 7
                      option(value='8') 8
                      option(value='9') 9
                      option(value='10') 10
                      option(value='11') 11
                      option(value='12') 12
                    | &nbsp; &nbsp;/
                  p#guide_5.guidelines
                    small Choose the month of expiry your card. 
              .col-2_sm-4
                label.description.small(for='element_6') Year 
                  div
                    select#element_6.element.select.small(name='element_6')
                      option(value='1' selected='selected') 19
                      option(value='2') 20
                      option(value='3') 21
                      option(value='4') 22
                      option(value='5') 23
                  p#guide_6.guidelines
                    small Choose the year of expiry your card. 
              .col-2_sm-4
                label.description.small(for='element_2') CCV 
                div.rel
                  input#element_2.element.text.small(name='element_2' type='text' maxlength='4' value='' pattern='[0-9]*')
                  svg(viewbox='0 0 38 27' id='ccv' fill='none' xmlns='http://www.w3.org/2000/svg')
                    rect(x='1' y='7' width='24' height='19' fill='#F7F7F7')
                    path(d='M23.833 6H2.167C.975 6 0 6.984 0 8.188v16.624C0 26.017.975 27 2.167 27h21.666C25.025 27 26 26.016 26 24.812V8.188C26 6.984 25.025 6 23.833 6zM2.167 7.75h21.666c.23 0 .434.205.434.438V11H1.733V8.187c0-.232.203-.437.434-.437zm21.666 17.5H2.167a.448.448 0 0 1-.434-.438V16h22.534v8.813a.448.448 0 0 1-.434.437zM18 20h4v-2h-4v2z' fill='#333')
                    circle(cx='20' cy='19' r='3.5' stroke='#000')
                    circle(cx='29' cy='9' r='8.5' fill='#fff' stroke='#000')
                    path(d='M22.176 11l1.456-2.232-1.32-2.016h1.416l.68 1.36.656-1.36h1.344L25.16 8.72 26.624 11h-1.432l-.84-1.592L23.544 11h-1.368zM26.973 11l1.456-2.232-1.32-2.016h1.416l.68 1.36.656-1.36h1.344L29.957 8.72 31.42 11h-1.432l-.84-1.592L28.34 11h-1.368zM31.77 11l1.456-2.232-1.32-2.016h1.416l.68 1.36.656-1.36h1.344L34.754 8.72 36.218 11h-1.432l-.84-1.592L33.138 11H31.77z' fill='#333')

                p#guide_2.guidelines
                  small
                    | Enter the three extra numbers on the reserve side of your card
              .col-6_sm-hidden
                |
              //select billing cycle
              .col-12
                h5 Select your billing cycle 
              .col-4.billing_cycle
                .pretty.p-default.p-round
                  input#element_7_3.element.radio.priceswitch-1(name='billing_cycle_creditcard' type='radio' value='1' checked='checked')
                  .state.p-success-o
                    label.choice(for='element_7_3') $9 / mo 
                span.small Billed monthly

              .col-4.billing_cycle
                .pretty.p-default.p-round.bestvalue
                  input#element_7_4.element.radio.priceswitch-2(name='billing_cycle_creditcard' type='radio' value='2')
                  .state.p-success-o
                    label.choice(for='element_7_4') $8.25 / mo
                span.small $99 billed yearly
              .col-4
                | 
              
              .col-12.receipt
                .grid-center
                  .col-11
                    h5 Today&apos;s payment
                    .price.monthly
                      | $9.00
                      span Cancel Anytime
                    .price.annual.hideit
                      | $99.00 
                      span Cancel Anytime 
                    p.our-commitment
                      strong Our Commitment:  
                      | If we haven’t already written the best book on a tech topic, we promise to hunt down the best book and bring it to your SitePoint library.
                  .col-11.text-center
                    input(type='hidden' name='form_id' value='79300')
                    button.unlock_button 

                      | Unlock the Library


          .paypalUI 
            .grid
              //select billing cycle
              .col-12
                h5 Select your billing cycle 
              .col-4.billing_cycle
                .pretty.p-default.p-round
                  input#element_7_5.element.radio.priceswitch-1(name='billing_cycle_paypal' type='radio' value='1' checked='checked')
                  .state.p-success-o
                    label.choice(for='element_7_5') $9 / mo 
                span.small Billed monthly
 
              .col-4.billing_cycle
                .pretty.p-default.p-round.bestvalue
                  input#element_7_6.element.radio.priceswitch-2(name='billing_cycle_paypal' type='radio' value='2')
                  .state.p-success-o
                    label.choice(for='element_7_6') $8.25 / mo
                span.small $99 billed yearly
              .col-4
                | 


              .col-12.receipt
                .grid-center
                  .col-11
                    h5 Today&apos;s payment
                    .price.monthly
                      | $9.00
                      span Cancel Anytime 
                    .price.annual.hideit
                      | $99.00 
                      span Cancel Anytime 
                    p.our-commitment
                      strong Our Commitment:  
                      | If we haven’t already written the best book on a tech topic, we promise to hunt down the best book and bring it to your SitePoint library.
                  .col-11.text-center
                    button.paypal_button 
                      img(src="images/paypal-white.svg")
                      | Checkout

