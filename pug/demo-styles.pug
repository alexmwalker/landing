style.
      
    @import url("https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Roboto:wght@300;500;700&display=swap");
                svg a {
                /*outline: 1px red dashed;*/
                cursor: hand;
                }
                text {
                font-family: "Roboto", sans-serif;
                }
                
                
                #code-window text {
                font-family: "Roboto Mono", monospace;
                }
                .hide {
                clip-path: url(#show-nothing);
                }
                .show {
                clip-path: url(#screen-mask);
                }
                .keys rect {
                rx: 2;
                }
                /* DEFAULTS */
                .shadow {
                filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
                }
                .page-wrapper,
                .bookmark {
                transition: all 1s ease-in-out;
                }
    
                #code-panel-pos {
                transform: matrix(0.9, 0, 0, 0.9, 710, 47);
                }
    
                .cursor {
                transition: all 1s ease-in-out;
                }
    
                .reveal {
                opacity: 0;
                }
            .bookmark-section-1, .bookmark-section-2{
            fill:#fff;
            }
                /* DEMO STATE TRIGGERED */
                .demo-1 .cursor {
                transform: translate(450px, -120px);
                }
                .demo-1 #code-panel-pos {
                transform: matrix(0.9, 0, 0, 0.9, 180, 47);
                transition-delay: 1s;
                }
    
                .demo-2 .cursor {
                transform: translate(-80px, 120px);
                }
                .demo-2 foreignObject .page-wrapper {
                margin-top: -1500px;
                }
                .demo-2 foreignObject .bookmark-section-1 {
                fill: #faffc8;
                transition-delay: 1s;
                }
    
                .demo-3 .cursor {
                transform: translate(-41px, -153px);
                }
                .demo-3 foreignObject .page-wrapper {
                margin-top: -850px;
                }
                .demo-3 foreignObject .bookmark-section-2 {
                fill: #faffc8;
                transition-delay: 1s;
                }
    
                /* ###  STAGED TRANSITIONS  ### */
                .arrive-1,
                .arrive-2,
                .arrive-3,
                .arrive-4 {
                pointer-events: none;
                transition: all 1s ease-in-out;
                transition-delay: 0s;
                }
    
                .demo-1 .stage-1 .reveal,
                .demo-2 .stage-2 .reveal,
                .demo-3 .stage-3 .reveal,
                .demo-4 .stage-4 .reveal {
                opacity: 1;
                }
    
                .demo-1 .stage-1 .arrive-2,
                .demo-2 .stage-2 .arrive-2,
                .demo-3 .stage-3 .arrive-2,
                .demo-4 .stage-4 .arrive-2 {
                transition-delay: 1s;
                animation-delay: 1;
                }
    
                .demo-1 .stage-1 .arrive-3,
                .demo-2 .stage-2 .arrive-3,
                .demo-3 .stage-3 .arrive-3,
                .demo-4 .stage-4 .arrive-3 {
                transition-delay: 2s;
                animation-delay: 2s;
                }
    
                .demo-1 .stage-1 .arrive-4,
                .demo-2 .stage-2 .arrive-4,
                .demo-3 .stage-3 .arrive-4,
                .demo-4 .stage-4 .arrive-4 {
                transition-delay: 3s;
                animation-delay: 3s;
                }
    
                /* ### DEMO BACKGROUND ### */
                /* (just to show the switch is working) */
                /* ### Switch button controls ### */
                .demo-1 .kaboom,
                .demo-2 .kaboom,
                .demo-3 .kaboom,
                .demo-4 .kaboom {
                animation: none;
                }
    
                .demo-1 .stage-1 .kaboom,
                .demo-2 .stage-2 .kaboom,
                .demo-3 .stage-3 .kaboom,
                .demo-4 .stage-4 .kaboom {
                animation: boom 1.2s linear 3;
                animation-delay: 3.2s;
                }
    
                @keyframes boom {
                0% {
                    stroke-width: 0px;
                    stroke-opacity: 1;
                }
                90% {
                    stroke-width: 30px;
                    stroke-opacity: 0;
                }
                100% {
                    stroke-opacity: 0;
                }
                }
    